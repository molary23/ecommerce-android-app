<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="General">
        <ListPreference
            android:defaultValue="Light"
            android:dialogTitle="@string/settings_themes"
            android:entries="@array/pref_theme"
            android:entryValues="@array/pref_theme"
            android:key="@string/pref_theme_val"
            android:title="@string/settings_themes"
            app:icon="@drawable/outline_light_mode_24"
            android:summary="@string/settings_theme_summary"/>

        <ListPreference
            android:defaultValue="Call"
            android:dialogTitle="@string/settings_contact"
            android:entries="@array/pref_contact"
            android:entryValues="@array/pref_contact"
            android:key="@string/pref_contact_val"
            android:title="@string/settings_contact"
            app:icon="@drawable/baseline_local_phone_24"
            android:summary="@string/contact_us_words"/>

    </PreferenceCategory>

    <Preference
        android:dialogTitle="@string/settings_themes"
        android:key="@string/pref_logout_val"
        android:title="@string/log_out"
        app:allowDividerAbove="false"
        app:icon="@drawable/baseline_power_settings_new_24" />
</PreferenceScreen>